{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test": {
        "dependsOn": ["build"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "deploy": {
        "dependsOn": ["build", "test"]
      }
    }
}